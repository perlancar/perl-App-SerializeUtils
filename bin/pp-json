#!perl

use 5.010;
use strict;
use warnings;

use Getopt::Long;

# VERSION

my $json_mod = '';
GetOptions(
    'pp' => sub { $json_mod = 'PP' },
    'xs' => sub { $json_mod = 'XS' },
    'help' => sub {
        print "Usage: pp-json [--pp|--xs] <file>\n";
        exit 0;
    },
);

my $json;
if ($json_mod eq 'PP') {
    require JSON::PP; $json = JSON::PP->new;
} elsif ($json_mod eq 'XS') {
    require JSON::XS; $json = JSON::XS->new;
} else {
    require JSON;     $json = JSON    ->new;
}

$json->canonical->allow_nonref->pretty(1);

undef $/;
print $json->encode($json->decode(scalar <>));

1;
#ABSTRACT: Pretty-print JSON
#PODNAME:

=head1 OPTIONS

=over

=item * --pp

Force using L<JSON::PP> instead of L<JSON>.

=item * --xs

Force using L<JSON::XS> instead of L<JSON>.

=back
